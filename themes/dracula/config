
# i3 dracula theme

# basic palette
set $realblack #000000
set $black #282a36
set $nearblack #44475a
set $white #f8f8f2
set $gray #6272a4
set $cyan #8be9fd
set $green #50fa7b
set $orange #ffb86c
set $pink #ff79c6
set $purple #bd93f9
set $red #ff5555
set $yellow #f1fa8c

# dmenu colors
set $dmenu_nb #282a36
set $dmenu_sb #6272a4
set $dmenu_nf #f8f8f2
set $dmenu_sf #f8f8f2

# class                 border   bground  text    indicator  child_border
client.focused          $gray    $gray    $white  $purple    $pink
client.focused_inactive $gray    $gray    $black  $purple    $pink
client.unfocused        $gray    $black   $gray   $purple    $black
client.urgent           $orange  $orange  $black  $purple    $orange
client.placeholder      $black   $black   $white  $purple    $black

client.background       $gray

